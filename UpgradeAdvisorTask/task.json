{
    "id": "C9227D18-D9AC-4358-B317-340353A943E8",
    "name": "RedgateMSUA",
    "friendlyName": "Redgate MS Upgrade Advisor",
    "description": "Creates a report on forward compatibility as part of CI build so issues can be addressed early.",
    "helpMarkDown": "[More Information](https://documentation.red-gate.com/display/SAP1/SQL+Automation+Pack+documentation)",
    "category": "Build",
    "visibility": [
        "Build", "Release"
    ],
    "author": "Redgate Software",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "demands": [

    ],
    "minimumAgentVersion": "1.83.0",
    "groups": [
		{
            "name":"nuGetPackageVersionGroup",
            "displayName":"NuGet Package Version",
            "isExpanded":false
        }
    ],
    "inputs": [
		{
            "name": "server",
            "type": "string",
            "label": "Server",
            "defaultValue": "",
            "required": true
        },
        {
            "name": "database",
            "type": "string",
            "label": "Database",
            "defaultValue": "",
            "required": true
        },
        {
            "name": "authMethod",
            "type": "pickList",
            "label": "Authentication Method",
            "defaultValue": "sqlServerAuth",
            "required": true,
            "options": {
                "sqlServerAuth": "SQL Server authentication",
                "windowsAuth": "Windows authentication"
            }
        },
        {
            "name": "username",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": true,
            "visibleRule": "authMethodSync = sqlServerAuth"
        },
        {
            "name": "password",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "required": true,
            "visibleRule": "authMethodSync = sqlServerAuth",
            "helpMarkDown": "Password should reference a secret variable defined on the Variables tab."
        },
	],
    "instanceNameFormat": "Upgrade Advisor running on $(server)/$(database)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\MSUA.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}