{
    "manifestVersion": 1,
    "id": "redgateSqlCi",
    "name": "DLM Automation Build",
    "version": "1.0.18",
    "publisher": "redgatesoftware",
    "targets": [{"id": "Microsoft.VisualStudio.Services"}],
    "description": "Build, test, sync and publish databases with DLM Automation.",
    "public": true,
    "icons": {
        "default": "images/redgatesqlci-logo.png"
    },
    "tags": [
        "SQL",
        "ci",
        "database",
        "Redgate",
        "Red Gate",
        "sqlci",
        "deployment",
        "DLM",
        "Automation"
    ],
    "files": [
        {   "path": "TheTask" },
        {
		    "path": "images",
			"addressable": true
		}
    ],
    "categories": [
		"Build and release"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "screenshots": [
    ],
    "links": {
        "home":       { "uri": "https://www.red-gate.com/" },
        "getstarted": { "uri": "https://www.red-gate.com/dlmas/using-vsts-extension" },
        "learn":      { "uri": "https://documentation.red-gate.com/display/DAS/DLM+Automation+Suite" },
		"support":    { "uri": "https://redgatesupport.zendesk.com/hc/en-us" }
    },
    "branding": {
        "color": "rgb(204, 0, 0)",
        "theme": "dark"
    },
    "contributions": [
        {
            "id": "SQLCITask",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "TheTask"
            }
        }
    ]
}